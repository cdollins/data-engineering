<h1>Listing imports</h1>

<table>
  <thead>
    <tr>
	  <th>ID</th>
	  <th>Has Data?</th>
	  <th># of Purchase</th>
	  <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @imports.each do |import| %>
      <tr>
	    <td><%= import.id %></td>
		<td><%= import.data.nil? ? "No" : "Yes" %></td>
		<td><%= import.data.nil? ? "N/A" : import.total %></td>
        <td><%= link_to 'Show', import %></td>
        <td><%= link_to 'Destroy', import, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>




<%= form_for @import, :html => {:multipart => true} do |f| %>
  <p>
    <%= f.file_field :data %>
  </p>
  <p><%= f.submit %></p>
<% end %>


